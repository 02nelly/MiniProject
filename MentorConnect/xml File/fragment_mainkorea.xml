<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment_mainkorea">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="원하는 원데이 멘토를 선택하세요 :)"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_korea_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:backgroundTint="@color/teal_700"
        android:text="멘티 구하러 가기"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:src="@drawable/oneday1" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:layout_weight="1"
                    android:src="@drawable/oneday2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:src="@drawable/oneday3" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:layout_weight="1"
                    android:src="@drawable/oneday4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:src="@drawable/oneday5" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:layout_weight="1"
                    android:src="@drawable/oneday6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:src="@drawable/oneday7" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:layout_weight="1"
                    android:src="@drawable/oneday8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:src="@drawable/oneday9" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:layout_weight="1"
                    android:src="@drawable/oneday10" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>