<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10sp"
    android:orientation="vertical"
    tools:context=".fragment_rank">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center"
        android:text="마이 페이지"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="315dp"
            android:layout_height="144dp"
            android:layout_weight="1"
            android:src="@drawable/myimage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Jihye Shin"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_rank_logout"
                android:layout_width="249dp"
                android:layout_height="20sp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:text=" 로그아웃 하기"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <android.widget.Button
        android:id="@+id/btn_rank_pj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="@drawable/button_pretty"
        android:text="프로필 편집"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7sp"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/btn_rank_gr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_pretty"
            android:text="경력"
            android:textSize="20sp" />

        <android.widget.Button
            android:id="@+id/btn_rank_mtgr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_pretty"
            android:text="멘토 경력"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="스킬"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editSkill"
                    android:layout_width="317dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="나의 스킬을 알려주세요."
                    android:inputType="textPersonName" />

                <android.widget.Button
                    android:id="@+id/button6"
                    android:layout_width="10sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_edit" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="경력"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editSkill2"
                    android:layout_width="317dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="지금 하고 있거나 이전에 한 일을 알려주세요."
                    android:inputType="textPersonName" />

                <android.widget.Button
                    android:id="@+id/button7"
                    android:layout_width="10sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_edit" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="교육"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editSkill3"
                    android:layout_width="317dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="어떤 교육을 받았는지 알려주세요."
                    android:inputType="textPersonName" />

                <android.widget.Button
                    android:id="@+id/button8"
                    android:layout_width="10sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_edit" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="링크"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editSkill4"
                    android:layout_width="317dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="블로그, SNS 등 다양한 링크로 나를 표현해보세요."
                    android:inputType="textPersonName" />

                <android.widget.Button
                    android:id="@+id/button9"
                    android:layout_width="10sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_edit" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>